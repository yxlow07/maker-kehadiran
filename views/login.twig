{% extends 'user_layout.twig' %}
{% block title %}Log Masuk{% endblock %}
{% block content %}
    <main class="w-full max-w-xl mx-auto p-6">
        <div class="mt-7 bg-white border border-gray-200 rounded-xl shadow-sm dark:bg-gray-800 dark:border-gray-700">
            <div class="p-4 sm:p-7">
                <div class="text-center">
                    <h1 class="block text-2xl font-bold text-gray-800 dark:text-white">Log Masuk</h1>
                    <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                        Tiada akaun?
                        <a class="c-links" href="{{ path() }}/register">
                            Daftar akaun di sini!
                        </a>
                    </p>
                </div>

                <div class="mt-5">
                    <!-- Form -->
                    <form class="mt-6" action="" method="post">
                        <div class="grid gap-y-4">
                            <!-- Form Group for idMurid -->
                            <div>
                                <div class="flex items-center justify-between">
                                    <label for="idMurid" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">ID Murid</label>
                                </div>
                                <div class="mt-2">
                                    <input name="idMurid" placeholder="Masukkan ID Murid" type="text" value="{{ model.idMurid }}" class="c-input {{ model.errors.idMurid is not empty ? 'ring-red-500' : 'dark:ring-gray-300' }} focus:{{ model.errors.idMurid is not empty ? 'ring-red-500 focus:border-red-500' : 'ring-blue-500 focus:border-blue-500' }}">
                                    {% if model.errors.idMurid is not empty %}
                                        <div class="mt-1 text-red-500 text-sm first-letter:capitalize">{{ model.errors.idMurid[0] }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            <!-- End Form Group for idMurid -->

                            <!-- Form Group -->
                            <div>
                                <div class="flex items-center justify-between">
                                    <label for="password" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Kata Laluan</label>
                                    <div class="text-sm">
                                        <a href="{{ path() }}/forgot_password" class="c-links">Lupa Kata Laluan?</a>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <div class="relative">
                                        <input id="password" placeholder="Masukkan kata laluan" name="password" type="password" autocomplete="current-password" class="c-input {{ model.errors.password is not empty ? 'ring-red-500' : 'dark:ring-gray-300' }} focus:{{ model.errors.password is not empty ? 'ring-red-500 focus:border-red-500' : 'ring-blue-500 focus:border-blue-500' }}">
                                        <button type="button" data-hs-toggle-password='{"target": "#password"}' class="absolute top-0 end-0 p-3.5 rounded-e-md dark:focus:outline-none">
                                            <svg class="flex-shrink-0 size-3.5 text-gray-400 dark:text-neutral-600" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                <path class="hs-password-active:hidden" d="M9.88 9.88a3 3 0 1 0 4.24 4.24"/>
                                                <path class="hs-password-active:hidden" d="M10.73 5.08A10.43 10.43 0 0 1 12 5c7 0 10 7 10 7a13.16 13.16 0 0 1-1.67 2.68"/>
                                                <path class="hs-password-active:hidden" d="M6.61 6.61A13.526 13.526 0 0 0 2 12s3 7 10 7a9.74 9.74 0 0 0 5.39-1.61"/>
                                                <line class="hs-password-active:hidden" x1="2" x2="22" y1="2" y2="22"/>
                                                <path class="hidden hs-password-active:block" d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/>
                                                <circle class="hidden hs-password-active:block" cx="12" cy="12" r="3"/>
                                            </svg>
                                        </button>
                                    </div>
                                    {% if model.errors.password is not empty %}
                                        <div class="mt-1 text-red-500 text-sm first-letter:capitalize">{{ model.errors.password[0] }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            <!-- End Form Group -->

                            <!-- Checkbox -->
                            <div class="flex items-center">
                                <div class="flex">
                                    <input name="rememberMe" value="true" type="checkbox" class="text-blue-600 focus:ring-blue-500 h-4 w-4 border-gray-300 rounded">
                                </div>
                                <div class="ms-3">
                                    <label for="rememberMe" class="text-sm dark:text-white">Simpan akaun</label>
                                </div>
                            </div>
                            <!-- End Checkbox -->

                            <button type="submit" class="c-form-btn">Log Masuk</button>
                        </div>
                    </form>
                    <!-- End Form -->
                </div>
            </div>
        </div>
    </main>
{% endblock %}