{% extends 'auth_layout.twig' %}
{% block title %}Register{% endblock %}
{% block prompt %}Create an account{% endblock %}
{% block content %}
    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        <form class="space-y-6" action="" method="POST">
            <div>
                <label for="idMurid" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">ID Murid</label>
                <div class="mt-2">
                    <input name="idMurid" value="{{ model.idMurid ?? '' }}" type="text" autocomplete="on" class="block w-full rounded-md border-0 py-1.5 text-gray-900 dark:text-black shadow-sm ring-1 ring-inset {{ model.errors.idMurid is not empty ? 'ring-red-500' : 'ring-gray-300' }} placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:{{ model.errors.idMurid is not empty ? 'ring-red-500' : 'ring-indigo-600' }} sm:text-sm sm:leading-6">
                    {# Check if there are errors for the idMurid field #}
                    {% if model.errors.idMurid is not empty %}
                        <div class="mt-1 text-red-500 text-sm first-letter:capitalize">{{ model.errors.idMurid[0] }}</div>
                    {% endif %}
                </div>
            </div>

            <div>
                <label for="noTel" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">No Telefon</label>
                <div class="mt-2">
                    <input name="noTel" value="{{ model.noTel ?? '' }}" type="text" autocomplete="on" class="block w-full rounded-md border-0 py-1.5 text-gray-900 dark:text-black shadow-sm ring-1 ring-inset {{ model.errors.noTel is not empty ? 'ring-red-500' : 'ring-gray-300' }} placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:{{ model.errors.noTel is not empty ? 'ring-red-500' : 'ring-indigo-600' }} sm:text-sm sm:leading-6">
                    {# Check if there are errors for the noTel field #}
                    {% if model.errors.noTel is not empty %}
                        <div class="mt-1 text-red-500 text-sm first-letter:capitalize">{{ model.errors.noTel[0] }}</div>
                    {% endif %}
                </div>
            </div>

            <div>
                <label for="kLMurid" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Password</label>
                <div class="mt-2">
                    <input name="kLMurid" value="{{ model.kLMurid ?? '' }}" type="password" autocomplete="on" class="block w-full rounded-md border-0 py-1.5 text-gray-900 dark:text-black shadow-sm ring-1 ring-inset {{ model.errors.kLMurid is not empty ? 'ring-red-500' : 'ring-gray-300' }} placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:{{ model.errors.kLMurid is not empty ? 'ring-red-500' : 'ring-indigo-600' }} sm:text-sm sm:leading-6">
                    {# Check if there are errors for the kLMurid field #}
                    {% if model.errors.kLMurid is not empty %}
                        <div class="mt-1 text-red-500 text-sm first-letter:capitalize">{{ model.errors.kLMurid[0] }}</div>
                    {% endif %}
                </div>
            </div>

            <div>
                <label for="confirmkLMurid" class="block text-sm font-medium leading-6 text-gray-900 dark:text-white">Confirm password</label>
                <div class="mt-2">
                    <input name="confirmkLMurid" value="{{ model.confirmkLMurid ?? '' }}" type="password" autocomplete="on" class="block w-full rounded-md border-0 py-1.5 text-gray-900 dark:text-black shadow-sm ring-1 ring-inset {{ model.errors.confirmkLMurid is not empty ? 'ring-red-500' : 'ring-gray-300' }} placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:{{ model.errors.confirmkLMurid is not empty ? 'ring-red-500' : 'ring-indigo-600' }} sm:text-sm sm:leading-6">
                    {# Check if there are errors for the confirmkLMurid field #}
                    {% if model.errors.confirmkLMurid is not empty %}
                        <div class="mt-1 text-red-500 text-sm first-letter:capitalize">{{ model.errors.confirmkLMurid[0] }}</div>
                    {% endif %}
                </div>
            </div>


            <div>
                <button type="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Register</button>
            </div>

            <!-- Horizontal Line -->
            <hr class="my-6 border-gray-300 dark:border-gray-600">

            <!-- Register with Google and GitHub -->
            <div class="flex space-x-4">
                <button type="button" class="flex-1 flex items-center justify-center rounded-md bg-red-400 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-red-300 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-500">
                    <img src="{{ img('google_logo_white.png') }}" alt="Google Logo" class="h-4 w-4 mr-2">
                    Google
                </button>
                <button type="button" class="flex-1 flex items-center justify-center rounded-md bg-gray-700 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-gray-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-700">
                    <img src="{{ img('github_logo_white.png') }}" alt="GitHub Logo" class="h-4 w-4 mr-2">
                    GitHub
                </button>
            </div>

        </form>

        <p class="mt-5 text-center text-gray-500 dark:text-gray-300">
            Already have an account?
            <a href="/login" class="font-semibold leading-6 text-indigo-400 hover:text-indigo-300">Login</a>
        </p>
    </div>
{% endblock %}