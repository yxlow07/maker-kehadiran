{% extends 'user_layout.twig' %}

{% block title %}Semak Kehadiran{% endblock %}
{% block content %}
    <div class="bg-white dark:bg-slate-800 shadow-lg rounded-lg overflow-hidden my-auto">
        <div class="bg-slate-800 text-white px-6 py-4 text-center">
            <h2 class="text-2xl font-semibold">Rekod Kehadiran Murid {{ record.idMurid }}</h2>
        </div>
        <div class="p-6 dark:text-white">
            <table class="min-w-full divide-y divide-gray-700 dark:divide-gray-200 text-center">
                <thead>
                <tr>
                    <th class="px-4 py-2 text-xs font-medium text-gray-600 dark:text-gray-300 uppercase">Aktiviti</th>
                    <th class="px-4 py-2 text-xs font-medium text-gray-600 dark:text-gray-300 uppercase">Hadir?</th>
                </tr>
                </thead>
                <tbody>
                {% for key, value in record.kehadiran %}
                    <tr class="odd:bg-white even:bg-gray-100 dark:odd:bg-slate-800 dark:even:bg-slate-600">
                        <td class="px-4 py-2">{{ key+1 }}</td>
                        <td class="px-4 py-2">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{ value ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' }}">
                                {{ value ? 'Hadir' : 'Tidak Hadir' }}
                            </span>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}